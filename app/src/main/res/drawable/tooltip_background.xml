<!-- res/drawable/tooltip_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#333333" /> <!-- Tooltip background color (dark grey in this case) -->
    <corners android:radius="8dp" />  <!-- Rounded corners -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- White border around the tooltip -->
</shape>
